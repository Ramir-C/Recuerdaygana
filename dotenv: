const express = require("express");
const mysql = require("mysql2");
const dotenv = require("dotenv");
const path = require("path");

dotenv.config();
const app = express();
const PORT = process.env.PORT || 3000;

const db = mysql.createConnection({
    host: process.env.DB_HOST,
    user: process.env.DB_USER,
    password: process.env.DB_PASSWORD,
    database: process.env.DB_NAME,
    port: process.env.DB_PORT
});

db.connect(err => {
    if (err) {
        console.error("âŒ Error al conectar a MySQL:", err);
        return;
    }
    console.log("âœ… Conectado a MySQL");
});

app.use(express.static(path.join(__dirname, "public")));
app.use(express.json());

// Guardar resultados del juego
app.post("resultados1", (req, res) => {
    const { nombre, intento, tiempo, errores } = req.body;
    const sql = "INSERT INTO resultados1 (nombre, intento, tiempo, errores) VALUES (?, ?, ?, ?)";
    db.query(sql, [nombre, intento, tiempo, errores], (err, result) => {
        if (err) {
            console.error(err);
            return res.status(500).send("Error al guardar los resultados");
        }
        res.send("âœ… Resultado guardado");
    });
});

// Ver resultados
app.get("/resultados1", (req, res) => {
    db.query("SELECT * FROM resultados1 ORDER BY fecha DESC", (err, results) => {
        if (err) {
            console.error(err);
            return res.status(500).send("Error al obtener resultados");
        }
        res.json(results);
    });
});

app.listen(PORT, () => {
    console.log(`ðŸš€ Servidor corriendo en http://localhost:${PORT}`);
});
